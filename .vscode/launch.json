{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "gui",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/packages/nomad-FAIR/gui"
    },
    {
      "name": "app",
      "type": "python",
      "request": "launch",
      "justMyCode": false,
      "program": "${workspaceFolder}/.venv/bin/nomad",
      "args": ["admin", "run", "app"]
    },
    {
      "name": "worker",
      "type": "python",
      "request": "launch",
      "justMyCode": false,
      "program": "${workspaceFolder}/.venv/bin/nomad",
      "args": ["admin", "run", "worker"]
    },
    {
      "name": "hub",
      "type": "python",
      "request": "launch",
      "justMyCode": false,
      "program": "${workspaceFolder}/.venv/bin/nomad",
      "args": ["admin", "run", "hub"]
    },
    {
      "name": "nomad lab tests",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/.venv/bin/pytest",
      "justMyCode": false,
      "env": {
        "_PYTEST_RAISE": "1"
      },
      "args": ["-sv", "packages/nomad-FAIR/tests"]
    },
    {
      "name": "simulations tests",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "-m",
      "justMyCode": false,
      "env": {
        "_PYTEST_RAISE": "1"
      },
      "args": ["pytest", "-sv", "${workspaceFolder}/packages/nomad-schema-plugin-simulations-data/tests/properties/test_band_gap.py", "-k", "test_default_quantities"]
    },
    {
      "name": "legacy parsers tests",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "-m",
      "justMyCode": false,
      "env": {
        "_PYTEST_RAISE": "1"
      },
      "args": ["pytest", "-sv", "${workspaceFolder}/packages/nomad-parser-legacy-electronic/tests/test_magresparser.py"]
    },
    {
      "name": "nomad parse",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/.venv/bin/nomad",
      "justMyCode": false,
      "args": [
        "parse",
        "--show-archive",
        "packages/nomad-FAIR/tests/data/parsers/vasp/vasp.xml",
        ">",
        "parser.test.json"
      ]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}"
    },
    {
      "name": "Python: Attach",
      "type": "python",
      "request": "attach",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "port": 3000,
      "secret": "my_secret",
      "host": "localhost"
    }
  ]
}
